<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.su.scott.inews.activity.SplashActivity">

    <TextView
        android:id="@+id/tv_appname_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:keepScreenOn="true"
        android:text="iNews"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_display2"
        android:textStyle="bold"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/tv_copyright_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/padding_s"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="Copyright Â© 2016 Scott Inc. All Rights Reserved"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_body_2"
        android:visibility="invisible" />

</RelativeLayout>
