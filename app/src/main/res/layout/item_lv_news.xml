<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_card_vertical"
    android:layout_marginLeft="@dimen/padding_s"
    android:layout_marginRight="@dimen/padding_s">

    <!-- android:foreground="?attr/selectableItemBackground"
    CardView 点击颜色效果
    -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="@dimen/padding_s">

        <RelativeLayout
            android:id="@+id/rl_pic_item_news"
            android:layout_width="130dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/iv_pic_item_news"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title_item_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_pic_item_news"
            android:layout_marginLeft="@dimen/padding_s"
            android:layout_marginTop="@dimen/padding_xs"
            android:layout_toRightOf="@+id/rl_pic_item_news"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_dark_1"
            android:textSize="@dimen/text_size_subhead" />

        <TextView
            android:id="@+id/tv_description_item_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_item_news"

            android:layout_marginLeft="@dimen/padding_s"
            android:layout_marginTop="@dimen/padding_s"
            android:layout_toRightOf="@+id/rl_pic_item_news"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/text_dark_2"
            android:textSize="@dimen/text_size_body_1" />

        <TextView
            android:id="@+id/tv_time_item_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rl_pic_item_news"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_dark_3"
            android:textSize="@dimen/text_size_body_1" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
