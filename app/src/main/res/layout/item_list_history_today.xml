<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_s"
    android:layout_marginRight="@dimen/padding_s"
    android:layout_marginTop="@dimen/spacing_card_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="@dimen/padding_s">

        <ImageView
            android:id="@+id/iv_pic_item_history_today"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_title_item_history_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_pic_item_history_today"
            android:layout_marginLeft="@dimen/padding_s"
            android:layout_marginTop="@dimen/padding_xs"
            android:layout_toRightOf="@+id/iv_pic_item_history_today"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_dark_1"
            android:textSize="@dimen/text_size_subhead" />

        <TextView
            android:id="@+id/tv_description_item_history_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_item_history_today"
            android:layout_marginLeft="@dimen/padding_s"
            android:layout_marginTop="@dimen/padding_m"
            android:layout_toRightOf="@+id/iv_pic_item_history_today"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/text_dark_2"
            android:textSize="@dimen/text_size_body_1" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
